<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.mixa201.physlyrix">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".LauncherActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PackageView" />
        <activity android:name=".ContentView" />
        <activity android:name=".TestView" />
        <activity android:name=".PageView" />
        <activity android:name=".QuestView" />
        <activity android:name=".QuestStepper" />
        <activity android:name=".QuestChecker" />
        <activity android:name=".SettingsActivity" />
        <activity android:name=".ServerView" />
        <activity android:name=".StatisticActivity" />
        <activity android:name=".DetailsActivity" />
        <activity android:name=".SearcherActivity"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
    </application>

</manifest>